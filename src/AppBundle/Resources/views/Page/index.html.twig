{% extends "AppBundle::base.html.twig" %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock %}

{% block content %}
<div class="container" style="font-size: 16px">
    <div class="page-header">
        <h1>Accueil</h1>
    </div>
    <p class="lead">
        Développer un <em>mini site e-commerce</em> avec Symfony.
    </p>

    <div class="row">
        <div class="col-md-6">
            <h2>Roadmap</h2>
            <ol>
                <li>Configurer les routes et créer les controlleurs associés.</li>
                <li>Configurer le schéma de la base de données.</li>
                <li>Charger un jeu de test.</li>
                <li>Développer les templates de la partie publique.</li>
                <li>Développer le formulaire de contact.</li>
                <li>Développer l'administration.</li>
                <li>Sécuriser l'administration.</li>
            </ol>
        </div>
        <div class="col-md-6">
            <h2>Sitemap</h2>
            <img src="{{ asset('bundles/app/img/sitemap.gif') }}" alt="Sitemap"/>
        </div>
    </div>

    <h2>Database schema</h2>
    <div class="row">
        <div class="col-md-8">
            <img src="{{ asset('bundles/app/img/schema.gif') }}"
                 alt="Schema" class="img-responsive"/>
        </div>
        <div class="col-md-4">
            <h3>Relations</h3>
            <table class="table table-striped">
                <tr>
                    <th>Category</th>
                    <td>OneToOne</td>
                    <td>Seo</td>
                </tr>
                <tr>
                    <th>Product</th>
                    <td>ManyToOne</td>
                    <td>Category</td>
                </tr>
                <tr>
                    <th>Product</th>
                    <td>OneToOne</td>
                    <td>Seo</td>
                </tr>
                <tr>
                    <th>Product</th>
                    <td>ManyToMany</td>
                    <td>Feature</td>
                </tr>
                <tr>
                    <td>Product</td>
                    <td>OneToMany</td>
                    <td>Image</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>ManyToOne</td>
                    <td>Product</td>
                </tr>
                <tr>
                    <td>Feature</td>
                    <td>ManyToMany</td>
                    <td>Product</td>
                </tr>
            </table>

        </div>
    </div>

</div>
{% endblock content %}
