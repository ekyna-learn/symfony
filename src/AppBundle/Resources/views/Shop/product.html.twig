{% extends "AppBundle::base.html.twig" %}

{% block title %}
    {{ parent() }} - [Product's seo title]
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header">
                    <h1>[Product's title]</h1>
                    <p>
                        [Product's description]
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                [Add to cart]
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                [Product's images]
            </div>
            <div class="col-md-6">
                [Product's features]
            </div>
        </div>
    </div>
{% endblock content %}
